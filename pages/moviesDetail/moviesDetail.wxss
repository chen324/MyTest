/* pages/moviesDetail/moviesDetail.wxss */
.moviesDetailContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movieImg {
  width: 70%;
  height: 700rpx;
  margin: 40rpx 0;
}

.movie_name {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.movie_detail {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

button {
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: green;
  color: #fff;
}